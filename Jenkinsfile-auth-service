pipeline {
    agent any
    triggers {
        pollSCM('0 8 * * *')
    }
     environment {
        IMAGE_NAME = 'cogeex:auth-service-latest'
        DEPLOYMENT_FILE = 'cogeex-auth-service.yaml'
    }
        
    stages {
        stage('Checkout Repo') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/develop']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'azure_secret', 
                            url: 'https://dev.azure.com/CoConsult/CoGeex%20v2/_git/Cogeex-auth-service'
                        ]]
                    ])
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}", "-f Dockerfile .")
                }
            }
        }
        stage('Delete old ressources') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/DEVOPS-13']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'git_secret', 
                            url: 'https://github.com/co-consult/jenkins-devops'
                        ]]
                    ])
                    sh '''
                if kubectl get -f cogeex-auth-service.yaml > /dev/null 2>&1; then
                    echo "Deleting existing Kubernetes resources..."
                    kubectl delete -f cogeex-auth-service.yaml
                else
                    echo "No existing resources to delete."
                fi
                 '''
                }
            }
        }
    }
}