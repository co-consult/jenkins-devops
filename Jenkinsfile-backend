pipeline {
    agent any
    triggers {
        pollSCM('0 8 * * *')
    }

    environment {
        REPO_URL = 'https://github.com/co-consult/coAudit-backend.git'
        GIT_CREDENTIALS_ID = 'git_secret'
        IMAGE_NAME = 'backfront:backend-latest'
        DEPLOYMENT_FILE = 'backend-deployment.yaml'
        DATABASE_FILE = 'database-deployment.yaml'
    }
        
    stages {
        stage('Checkout Repository') {
            steps {
                script {
                    checkout([ 
                        $class: 'GitSCM', 
                        branches: [[name: '*/master']], 
                        userRemoteConfigs: [[
                            url: REPO_URL, 
                            credentialsId: GIT_CREDENTIALS_ID 
                        ]] 
                    ])
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}", "-f Dockerfile .")
                }
            }
        }

        stage('Deploy to Minikube') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/DEVOPS-4']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'git_secret', 
                            url: 'https://github.com/co-consult/jenkins-devops.git'
                        ]]
                    ])
                    sh "ls -l ${WORKSPACE}"
                    sh "minikube kubectl -- apply -f ${DATABASE_FILE}"
                    sh "minikube kubectl -- apply -f ${DEPLOYMENT_FILE}"
                }
            }
        }
    }
}
