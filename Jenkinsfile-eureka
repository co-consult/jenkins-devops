pipeline {
    agent any
     environment {
        IMAGE_NAME = 'cogeex:eureka-latest'
        DEPLOYMENT_FILE = 'cogeex-eureka.yaml'
    }
        
    stages {
        stage('Checkout Repo') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/develop']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'azure_secret', 
                            url: 'https://dev.azure.com/CoConsult/CoGeex%20v2/_git/cogeex-eureka'
                        ]]
                    ])
                }
            }
        }
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build("${IMAGE_NAME}", "-f Dockerfile .")
                }
            }
        }
        stage('Delete old ressources') {
            steps {
                script {
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/DEVOPS-13']],
                        extensions: [],
                        userRemoteConfigs: [[
                            credentialsId: 'git_secret', 
                            url: 'https://github.com/co-consult/jenkins-devops'
                        ]]
                    ])
                    sh "kubectl delete -f cogeex-db.yaml"
                    sh "kubectl delete -f cogeex-eureka.yaml"
                    sh "kubectl delete -f cogeex-gateway.yaml"
                    sh "kubectl delete -f cogeex-auth-service.yaml"
                    sh "kubectl delete -f cogeex-company-service.yaml"
                    sh "kubectl delete -f cogeex-profile-service.yaml"
                    sh "kubectl delete -f cogeex-project-service.yaml"
                    sh "kubectl delete -f cogeex-parser-service.yaml"
                    sh "kubectl delete -f cogeex-frontend-deployment.yaml"
                }
            }
        }

    }
}